<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:id="@+id/toolbarFragment"
    tools:context="com.culpeo.android.fragments.ToolbarFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/homeButton"
        android:gravity="center_horizontal|center_vertical"
        android:src="@drawable/ic_home_black_24dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/favoritesButton"
        android:gravity="center_horizontal|center_vertical"
        android:src="@drawable/ic_grade_black_24dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/gamesButton"
        android:gravity="center_horizontal|center_vertical"
        android:src="@drawable/ic_videogame_asset_black_24dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/watchButton"
        android:gravity="center_horizontal|center_vertical"
        android:src="@drawable/ic_ondemand_video_black_24dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"/>
</LinearLayout>
